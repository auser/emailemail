{
  "exclude": ["**/*.test.ts"],
  "include": ["src/**/*.ts", ".eslintrc.js", "./jest.config.ts"],
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2019"
    ],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "declaration": true,
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "./lib",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "noEmit": true
  }
}