{
  "exclude": ["**/*.test.ts"],
  "include": ["./src/**/*.ts"],
  "compilerOptions": {
    "module": "CommonJS",
    "lib": [ "DOM", "es2020"],
    "target": "es2022",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./lib",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "allowJs": true,
    "noEmit": false
  }
}